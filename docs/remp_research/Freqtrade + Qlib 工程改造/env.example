# .env.example
# Freqtrade + Qlib 环境配置模板
# 使用方法: cp .env.example .env，然后修改必要的值

# ===== Freqtrade 配置 =====
FREQTRADE_USER_DATA=./01_freqtrade
FREQTRADE_EXCHANGE=binance

# 交易所 API 密钥（敏感信息，不要提交到 Git）
# BINANCE_API_KEY=your_api_key_here
# BINANCE_API_SECRET=your_api_secret_here

# ===== Qlib 配置 =====
QLIB_DATA_DIR=./02_qlib_research/qlib_data
QLIB_MODEL_DIR=./02_qlib_research/models

# ===== 模型管理 =====
MODEL_VERSION=v1
MODEL_AUTO_UPDATE=false
MODEL_UPDATE_FREQUENCY=weekly

# 模型自动重训练设置
MODEL_RETRAINING_ENABLED=false
MODEL_RETRAINING_INTERVAL=604800  # 秒，默认 7 天

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_DIR=./logs

# ===== 数据同步 =====
DATA_SYNC_INTERVAL=3600  # 秒，默认 1 小时
DATA_SYNC_ON_STARTUP=true

# ===== 路径配置 =====
FREQTRADE_DATA_DIR=./01_freqtrade/data
FREQTRADE_BACKTEST_RESULTS=./01_freqtrade/backtest_results
FREQTRADE_PLOTS=./01_freqtrade/plots

# ===== 开发配置 =====
DEBUG=false
VERBOSE=false

# ===== 数据库 =====
# 如果使用数据库存储（可选）
# DATABASE_URL=sqlite:///freqtrade.db

# ===== 通知 =====
# 交易通知设置（可选）
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id
