{
  "name": "vbrain",
  "version": "0.1.2",
  "updated_date_utc": "2026-01-13",
  "description": "vibe coding 项目大脑（控制平面清单）：定义 vbrain core（检索-提炼-回灌-记忆闭环）、数据落点与脚本入口，便于跨项目复用与后续 MCP 化。vbrain 只消费已落盘的 feed，不负责采集。",
  "vbrain_core": {
    "mcp_servers": [
      {
        "id": "in_memoria",
        "required": true,
        "role": "主脑：代码库画像 + 跨会话套路/决策记忆 + 语义检索/文件路由"
      },
      {
        "id": "local_rag",
        "required": true,
        "role": "资料索引加速器：显式 ingest 的语义召回 + 关键词增强"
      },
      {
        "id": "serena",
        "required": true,
        "role": "代码符号级检索/编辑：把结论稳定落地到代码与文档（不作为知识引擎）"
      }
    ],
    "authoritative_knowledge": {
      "project_docs_dir": "docs",
      "serena_memories_dir": ".serena/memories",
      "sop_vbrain_workflow": ".serena/memories/vbrain_workflow.md"
    },
    "state_and_cache": {
      "in_memoria_db": "in-memoria.db",
      "vibe_dir": ".vibe",
      "local_rag_db": ".vibe/local-rag/lancedb",
      "feed_cache_dir": ".vibe/knowledge/sources"
    },
    "entrypoints": {
      "vbrain_cli": "scripts/tools/vbrain.py",
      "vbrain_mcp_server": "scripts/tools/vbrain_mcp_server.py",
      "ingest_project_docs": "scripts/tools/local_rag_ingest_project_docs.py",
      "ingest_sources": "scripts/tools/local_rag_ingest_sources.py",
      "eval_embeddings": "scripts/tools/local_rag_eval_models.py"
    }
  }
}
