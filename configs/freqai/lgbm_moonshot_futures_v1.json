{
  "$schema": "https://schema.freqtrade.io/schema.json",
  "max_open_trades": 10,
  "stake_currency": "USDT",
  "stake_amount": "unlimited",
  "tradable_balance_ratio": 0.95,
  "dry_run": true,
  "dry_run_wallet": 100,
  "trading_mode": "futures",
  "margin_mode": "isolated",
  "strategy": "FreqaiLGBMMoonshotStrategy",
  "strategy_params": {
    "buy_pred_threshold": 0.003
  },
  "unfilledtimeout": {
    "entry": 10,
    "exit": 10,
    "unit": "minutes"
  },
  "entry_pricing": {
    "price_side": "other",
    "use_order_book": true,
    "order_book_top": 1
  },
  "exit_pricing": {
    "price_side": "other",
    "use_order_book": true,
    "order_book_top": 1
  },
  "exchange": {
    "name": "okx",
    "pair_whitelist": [
      "BTC/USDT:USDT",
      "ETH/USDT:USDT"
    ],
    "pair_blacklist": []
  },
  "pairlists": [{"method": "StaticPairList"}],
  "freqai": {
    "enabled": true,
    "purge_old_models": true,
    "train_period_days": 365,
    "backtest_period_days": 30,
    "live_retrain_hours": 24,
    "identifier": "lgbm_moonshot_standalone_v1",
    "feature_parameters": {
      "include_timeframes": ["1h"],
      "include_corr_pairlist": [],
      "label_period_candles": 6,
      "include_shifted_candles": 2,
      "indicator_periods_candles": [10, 20, 50],
      "indicator_max_lag": 1,
      "DI_threshold": 1.0
    },
    "data_split_parameters": {
      "test_size": 0.2,
      "random_state": 42
    },
    "model_training_parameters": {
      "n_estimators": 800,
      "learning_rate": 0.03,
      "num_leaves": 48,
      "max_depth": 8,
      "feature_fraction": 0.8,
      "bagging_fraction": 0.7,
      "bagging_freq": 1,
      "n_jobs": -1
    }
  }
}
