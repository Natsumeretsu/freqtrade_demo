{
  "$schema": "https://schema.freqtrade.io/schema.json",
  "user_data_dir": ".",
  "datadir": "data/okx/futures",
  "max_open_trades": 1,
  "stake_currency": "USDT",
  "stake_amount": "unlimited",
  "tradable_balance_ratio": 0.95,
  "dry_run": true,
  "dry_run_wallet": 100,
  "trading_mode": "futures",
  "margin_mode": "isolated",
  "strategy": "FreqaiCTATrendV3",
  "unfilledtimeout": {
    "entry": 10,
    "exit": 10,
    "unit": "minutes"
  },
  "entry_pricing": {
    "price_side": "other",
    "use_order_book": true,
    "order_book_top": 1
  },
  "exit_pricing": {
    "price_side": "other",
    "use_order_book": true,
    "order_book_top": 1
  },
  "exchange": {
    "name": "okx",
    "pair_whitelist": [
      "BTC/USDT:USDT"
    ],
    "pair_blacklist": []
  },
  "pairlists": [{"method": "StaticPairList"}],
  "freqaimodel": "LightGBMClassifier",
  "freqai": {
    "enabled": true,
    "purge_old_models": true,
    "train_period_days": 90,
    "backtest_period_days": 7,
    "live_retrain_hours": 24,
    "identifier": "cta_trend_btc_1h_v3",
    "feature_parameters": {
      "include_timeframes": ["1h"],
      "include_corr_pairlist": [],
      "label_period_candles": 12,
      "include_shifted_candles": 3,
      "indicator_periods_candles": [14, 24, 48],
      "indicator_max_lag": 2,
      "DI_threshold": 0
    },
    "data_split_parameters": {
      "test_size": 0.15,
      "random_state": 42
    },
    "model_training_parameters": {
      "n_estimators": 900,
      "learning_rate": 0.04,
      "num_leaves": 64,
      "max_depth": 8,
      "feature_fraction": 0.75,
      "bagging_fraction": 0.7,
      "bagging_freq": 1,
      "min_child_samples": 20,
      "n_jobs": -1,
      "objective": "multiclass",
      "num_class": 3,
      "metric": "multi_logloss"
    }
  }
}
